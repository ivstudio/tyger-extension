{
    "name": "accessibility-audit-extension",
    "version": "0.1.0",
    "description": "Chrome extension for comprehensive accessibility auditing with axe-core",
    "type": "module",
    "pnpm": {
        "overrides": {
            "@types/react": "^19.2.10",
            "@types/react-dom": "^19.2.3"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:ci": "tsc && vite build --mode production",
        "preview": "vite preview",
        "type-check": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\" \"*.json\" \"*.md\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\" \"*.json\" \"*.md\"",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 50",
        "lint:fix": "eslint . --fix",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "prepare": "husky"
    },
    "dependencies": {
        "@radix-ui/react-accordion": "^1.1.2",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-dropdown-menu": "^2.0.6",
        "@radix-ui/react-popover": "^1.1.15",
        "@radix-ui/react-select": "^2.0.0",
        "@radix-ui/react-tabs": "^1.0.4",
        "axe-core": "^4.8.3",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "dom-accessibility-api": "^0.7.1",
        "lucide-react": "^0.563.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7",
        "webextension-polyfill": "^0.12.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@commitlint/cli": "19.6.1",
        "@commitlint/config-conventional": "19.6.0",
        "@crxjs/vite-plugin": "^2.0.0-beta.21",
        "@eslint/js": "^9.39.2",
        "@tailwindcss/vite": "^4.1.18",
        "@testing-library/jest-dom": "6.6.3",
        "@testing-library/react": "16.3.1",
        "@testing-library/user-event": "14.5.2",
        "@types/chrome": "^0.1.36",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "@types/webextension-polyfill": "^0.12.4",
        "@typescript-eslint/eslint-plugin": "8.20.0",
        "@typescript-eslint/parser": "8.20.0",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/coverage-v8": "4.0.17",
        "@vitest/ui": "4.0.17",
        "@webext-core/fake-browser": "1.3.4",
        "autoprefixer": "^10.4.16",
        "eslint": "9.18.0",
        "eslint-plugin-react-hooks": "5.1.0",
        "eslint-plugin-react-refresh": "0.5.0",
        "globals": "^17.3.0",
        "happy-dom": "20.4.0",
        "husky": "9.1.7",
        "lint-staged": "15.4.2",
        "postcss": "^8.4.32",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.3.3",
        "vite": "^7.3.1",
        "vitest": "4.0.17",
        "vitest-axe": "0.1.0"
    },
    "license": "MIT"
}
