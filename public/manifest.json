{
    "manifest_version": 3,
    "name": "Accessibility Audit",
    "version": "0.1.0",
    "description": "Comprehensive accessibility auditing tool powered by axe-core",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "sidePanel",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "src/worker/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/contentScripts/index.ts"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "side_panel": {
        "default_path": "src/app/index.html"
    },
    "action": {
        "default_title": "Accessibility Audit"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
